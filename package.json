{
  "name": "sofast",
  "version": "0.1.1",
  "description": "wraps a command in a timer and logs completion time to console",
  "main": "./dist/index.cjs",
  "type": "module",
  "scripts": {
    "build": "sofast --name build 'run-p typecheck bundle'",
    "bundle": "esbuild ./src/index.ts --bundle --minify --platform=node --target=node16 --outfile=./dist/index.cjs --metafile=esbuild.json",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "bin": {
    "sofast": "./dist/index.cjs"
  },
  "author": "jamalsenouci",
  "homepage": "https://github.com/jamalsenouci/sofast",
  "license": "MIT",
  "dependencies": {
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.3",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-usage": "^5.0.2",
    "@types/node": "^17.0.29",
    "esbuild": "^0.14.38",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "standard-version": "^9.3.2",
    "typescript": "^4.7.0-beta"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
